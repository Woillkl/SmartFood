<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sentilab.testapplication">
    <!-- 인터넷 권한 선언 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_main"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_main_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".AdminGalleryFoodList"></activity>
        <activity android:name=".AdminGalleryActivity" />
        <activity android:name=".InsertFoodInfoActivity" />
        <activity android:name=".ListDateActivity" />
        <activity android:name=".GalleryActivity" />
        <activity android:name=".WithdrawalActivity" />
        <activity android:name=".PhotoAdminSendActivity" />
        <activity android:name=".ChangeInfo" />
        <activity android:name=".CheckPWD" />
        <activity android:name=".FoodClassify" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/file_paths" />

        <activity android:name=".MyPageActivity" />
        <activity android:name=".LoginMainActivity" />
        <activity android:name=".FindPasswordActivity" />
        <activity android:name=".FindIDActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>