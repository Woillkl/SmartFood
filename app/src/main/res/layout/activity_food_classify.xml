            android:id="@+id/upload_Button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rec_btn_grey"
            android:onClick="clickUpload"
            android:text="사진 저장"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/notfoundfood"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="운영자에게 사진 보내기"
            android:background="@drawable/admin_send_btn"
            android:textColor="@android:color/black"
            android:onClick="NotFoundPhoto" />

        <TextView
            android:id="@+id/loginplease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사진을 저장하려면 로그인을 해주세요."
            android:textSize="20sp"
            android:fontFamily="@font/baemin"
            android:textColor="@color/solid_black"
            android:gravity="center"
            android:visibility="invisible" />

